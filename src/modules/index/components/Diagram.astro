---
import clsxm from "@/utils/clsxm";

interface Props {
  about: {
    textSide: string;
    header: string;
    desc: string;
    img: {
      src: string;
      alt: string;
    };
  };
}

const data = Astro.props;
const about = data.about;
---

<section
  class={clsxm(
    about.textSide === "right" ? "lg:flex-row" : "lg:flex-row-reverse",
    "flex flex-col items-center justify-center gap-6 lg:gap-12 py-6 lg:py-20 px-6"
  )}>
  <img src={about.img.src} alt={about.img.alt} class="h-40 lg:h-[334px]" />

  <div class="flex flex-col gap-4 lg:gap-9">
    <h2 class="text-2xl font-bold lg:text-4xl">{about.header}</h2>

    <p class="text-lg lg:text-xl">{about.desc}</p>
  </div>
</section>
