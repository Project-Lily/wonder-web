---
import clsxm from "@/utils/clsxm";

interface Props {
  about: {
    textSide: string;
    header: string;
    desc: string;
    img: {
      src: string;
      alt: string;
    };
  };
}

const data = Astro.props;
const about = data.about;
---

<section
  class={clsxm(
    about.textSide === "right" ? "flex-col lg:flex-row" : "flex-col-reverse lg:flex-row-reverse",
    "items-center justify-center gap-6 lg:gap-12 py-20 px-6 lg:flex"
  )}>
  <img src={about.img.src} alt={about.img.alt} class="h-[334px]" />

  <div class="flex flex-col gap-9">
    <h2 class="text-4xl font-bold">{about.header}</h2>

    <p class="text-xl">{about.desc}</p>
  </div>
</section>
