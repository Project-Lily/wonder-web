---
interface Props {
  profile: {
    img: {
      src: string;
      alt: string;
    };
  };
}

const data = Astro.props.profile;
---

<div class="flex flex-col items-center gap-2">
  <img src={data.img.src} alt={data.img.alt} class="w-48 xl:w-64" />

  <p class="whitespace-nowrap text-center text-xl font-bold lg:text-2xl xl:text-[32px]">{data.img.alt}</p>
</div>
