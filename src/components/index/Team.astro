---
import { profiles } from "@/config/profiles";

import Profile from "./components/Profile.astro";
---

<section class="bg-wonder-purple-dark flex flex-col gap-12 py-10 text-white lg:gap-24 lg:py-20">
  <div class="flex flex-col items-center gap-6 lg:gap-16 xl:gap-20">
    <div class="flex flex-col gap-6 lg:flex-row lg:gap-16 xl:gap-20">
      {profiles.slice(0, 3).map((profile) => <Profile profile={profile} />)}
    </div>

    <div class="flex flex-col gap-6 lg:flex-row lg:gap-16 xl:gap-20">
      {profiles.slice(3, 5).map((profile) => <Profile profile={profile} />)}
    </div>
  </div>

  <h1 class="text-center text-2xl font-bold lg:text-5xl xl:text-6xl">The Wonder Reader Team</h1>
</section>
