---
import { Image } from "astro:assets";

import Hero from "@/assets/hero.png";
import Binus from "@/assets/logos/binus.png";
import Gdsc from "@/assets/logos/gdsc.png";
import Google from "@/assets/logos/google.png";
import Mitra from "@/assets/logos/mitra-netra.png";

import Contact from "../Contact.astro";
---

<section
  class="relative mx-4 my-[10px] flex flex-col gap-4 rounded-3xl bg-gradient-to-b from-wonder-purple-transparent from-0% to-100% py-6 font-jakarta-sans text-wonder-text lg:mx-[30px] lg:gap-8 lg:py-[120px] lg:pl-11">
  <div class="flex flex-col items-center gap-2 lg:items-start lg:gap-0 lg:pl-[30px]">
    <h1 class="text-2xl font-extrabold lg:text-[74px] lg:leading-[92px]">
      Discover <span class="text-wonder-purple">Wonder Reader:</span>
    </h1>

    <h2 class="text-[22px] font-extrabold lg:text-[64px] lg:leading-[110px]">
      a braille keyboard for <span class="text-wonder-purple">all</span>
    </h2>

    <p class="text-center text-lg opacity-80 lg:w-[568px] lg:text-start lg:text-[28px] lg:leading-[42px]">
      The revolutionary braille keyboard meant for everyone to <span class="font-bold">learn</span> and <span
        class="font-bold">grow</span
      >.
    </p>
  </div>

  <div class="flex flex-col items-center lg:items-start lg:px-[30px] lg:py-[10px]">
    <Contact />

    <p class="mb-5 mt-8 text-[25px] leading-[49px] opacity-60">Our wonderful partners!</p>

    <div class="grid grid-flow-row grid-cols-2 items-center gap-3 lg:grid-flow-col lg:grid-cols-none lg:grid-rows-1">
      <Image src={Gdsc} alt="Google Developer Student Clubs" class="h-[31px] w-[117px] grayscale" />

      <Image src={Mitra} alt="Mitra Netra Foundation" class="w-[58px] place-self-center grayscale" />

      <Image src={Google} alt="Google" class="m-[14px] w-[90px] grayscale" />

      <Image src={Binus} alt="Binus University" class="mx-3 w-[95px] grayscale" />
    </div>
  </div>

  <Image src={Hero} alt="" class="absolute right-0 top-[-3.8px] hidden h-[790px] w-[603px] lg:block" />
</section>
