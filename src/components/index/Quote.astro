---
import { Image } from "astro:assets";
import Icon from "astro-icon";

import Aric from "~/assets/articles/author-3.webp";
---

<section class="relative mx-auto px-[123px] py-[168px] font-jakarta-sans">
  <div
    class="z-50 flex flex-col gap-[6px] rounded-[14px] border-[3px] border-wonder-text bg-white px-[133px] py-20 shadow-[2px_4px_0_3px_#14383D]">
    <div class="flex flex-col gap-3">
      <Icon name="ic-quote" class="h-[57px] w-[65px] p-[10px]" />

      <h1 class="p-[10px] text-center text-[44px] font-semibold italic leading-[45px] text-wonder-text">
        Wonder Reader is the nicest device ever, everybody should be using it!
      </h1>

      <Icon name="ic-quote" class="h-[57px] w-[65px] rotate-180 self-end p-[10px]" />
    </div>

    <div class="flex flex-row items-center gap-9 self-center">
      <Image
        src={Aric}
        alt="quote-author"
        class="h-[69px] w-[69px] rounded-[69px] object-cover shadow-[0_4px_0_0_#14383D]"
      />

      <p class="text-2xl font-medium leading-[45px] text-wonder-text">Anonymous</p>
    </div>
  </div>

  <Icon name="ic-handy-red" class="absolute left-0 top-24 -z-10 h-[647px] w-[397px]" />

  <Icon name="ic-blobby-pink" class="absolute right-0 top-24 -z-10 h-[188px] w-[188px]" />

  <Icon name="ic-blobby-green" class="absolute bottom-20 right-0 -z-10 h-[199px] w-[199px]" />

  <div class="absolute -bottom-1 left-0 -z-20 h-[500px] w-full rounded-t-[260px] bg-wonder-purple"></div>
</section>
